<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.feedmerss.lidlproduction.feedmerss.Help">

    <include
        android:id="@+id/custom_actionbar"
        layout="@layout/custom_actionbar"></include>

    <TextView
        android:id="@+id/TVHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/custom_actionbar"
        android:layout_marginTop="10dp"
        android:text="@string/help"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <TextView
        android:id="@+id/TVHelpMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVHelp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/HelpMessage"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
